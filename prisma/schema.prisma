generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id            String   @id @default(cuid())
  name          String
  roleStatement String   @map("role_statement")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  documents   Document[]
  kbChunks    KbChunk[]
  brief       ProjectBrief?
  threads     Thread[]
  preferences Preference[]
  lessons     Lesson[]
  toolCalls   ToolCall[]
  auditLogs   AuditLog[]
  memoryItems MemoryItem[]

  @@map("projects")
}

enum DocumentCategory {
  FACTS
  RULES
  STATE
}

model Document {
  id          String           @id @default(cuid())
  projectId   String           @map("project_id")
  category    DocumentCategory
  filename    String
  mime        String
  sha256      String
  storagePath String           @map("storage_path")
  version     Int              @default(1)
  createdAt   DateTime         @default(now()) @map("created_at")

  project  Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  kbChunks KbChunk[]

  @@map("documents")
}

model KbChunk {
  id            String   @id @default(cuid())
  projectId     String   @map("project_id")
  documentId    String   @map("document_id")
  chunkIndex    Int      @map("chunk_index")
  text          String
  qdrantPointId String   @map("qdrant_point_id")
  createdAt     DateTime @default(now()) @map("created_at")

  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@map("kb_chunks")
}

model ProjectBrief {
  projectId       String   @id @map("project_id")
  briefMarkdown   String   @map("brief_markdown")
  kbIndexMarkdown String   @map("kb_index_markdown")
  missingInfoJson String   @map("missing_info_json")
  updatedAt       DateTime @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_briefs")
}

model Thread {
  id        String   @id @default(cuid())
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  messages  Message[]
  toolCalls ToolCall[]

  @@map("threads")
}

enum MessageRole {
  user
  assistant
  system
  tool
}

model Message {
  id        String      @id @default(cuid())
  threadId  String      @map("thread_id")
  role      MessageRole
  content   String
  createdAt DateTime    @default(now()) @map("created_at")

  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model Preference {
  id        String   @id @default(cuid())
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  ruleText  String   @map("rule_text")
  scope     String   @default("project")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("preferences")
}

model Lesson {
  id         String   @id @default(cuid())
  projectId  String   @map("project_id")
  userId     String   @map("user_id")
  lessonText String   @map("lesson_text")
  createdAt  DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("lessons")
}

enum ToolCallStatus {
  pending
  approved
  rejected
  completed
  failed
}

enum RiskLevel {
  low
  medium
  high
}

model ToolCall {
  id               String         @id @default(cuid())
  projectId        String         @map("project_id")
  threadId         String         @map("thread_id")
  name             String
  argsJson         String         @map("args_json")
  requiresApproval Boolean        @map("requires_approval")
  risk             RiskLevel
  status           ToolCallStatus @default(pending)
  resultJson       String?        @map("result_json")
  createdAt        DateTime       @default(now()) @map("created_at")
  updatedAt        DateTime       @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  thread  Thread  @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@map("tool_calls")
}

model AuditLog {
  id          String   @id @default(cuid())
  projectId   String   @map("project_id")
  userId      String?  @map("user_id")
  eventType   String   @map("event_type")
  payloadJson String   @map("payload_json")
  createdAt   DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}

// Memory Item Enums
enum MemoryItemType {
  fact
  rule
  event
  decision
  open_loop
  idea
  metric
  preference
  lesson
}

enum MemoryItemSource {
  user_chat
  doc_upload
  tool_result
  cron
  system
}

enum MemoryItemStatus {
  proposed
  accepted
  rejected
  done
  blocked
  active
}

model MemoryItem {
  id            String            @id @default(uuid())
  projectId     String            @map("project_id")
  userId        String?           @map("user_id")
  type          MemoryItemType
  title         String
  content       Json
  status        MemoryItemStatus? @default(proposed)
  source        MemoryItemSource  @default(user_chat)
  confidence    Float             @default(0.5)
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")
  expiresAt     DateTime?         @map("expires_at")
  supersedesId  String?           @map("supersedes_id")
  tags          String[]          @default([])
  qdrantPointId String?           @map("qdrant_point_id")

  project      Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  supersedes   MemoryItem?   @relation("Supersedes", fields: [supersedesId], references: [id])
  supersededBy MemoryItem[]  @relation("Supersedes")

  @@index([projectId, type])
  @@index([projectId, userId, type])
  @@index([projectId, expiresAt])
  @@map("memory_items")
}
