# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# API Security
AGENT_API_KEY=your-secret-api-key-here

# Database
DATABASE_URL=postgresql://agent:agent_password@localhost:5432/agent_manager

# Qdrant Vector DB
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Chat Provider: "openai" | "anthropic" | "claude_cli"
CHAT_PROVIDER=openai

# Embedding Provider: "openai" | "ollama" | "mock"
EMBEDDING_PROVIDER=openai

# OpenAI Configuration (when using openai provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_CHAT_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Anthropic Configuration (when using anthropic provider)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Claude CLI Configuration (when using claude_cli provider)
CLAUDE_CLI_CMD=claude
CLAUDE_CLI_TIMEOUT=60000

# Ollama Configuration (when using ollama embedding provider)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Embedding Dimensions (must match your embedding model)
# text-embedding-3-large: 3072
# nomic-embed-text: 768
# mock: 384
EMBEDDING_DIMS=3072

# File Storage
STORAGE_PATH=./data/uploads
MAX_UPLOAD_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info
